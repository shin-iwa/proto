    %tr
      %th.title
        %a.name-name{:href => article_novels_path(novel.id)}
          = novel.title
      %th.author
        作者：
        %a.name-name{:href => "/users/#{novel.user.id}"}
          = novel.user.nickname
  %tbody
    %tr.secondRecord
      %td.secondRecord__category
        .text
